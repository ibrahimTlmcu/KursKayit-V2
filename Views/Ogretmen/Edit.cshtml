@{
}

<div class="row">
    <div class="col-8">
        <form asp-controller="Ogretmen" asp-action="Edit" method="post">
            <input type="hidden" asp-for="OgretmenId" />
            <div class="mb-3">
                <label asp-for="Ad" class="form-label"> Ad</label>
                <input asp-for="Ad" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Soyad" class="form-label"> Soyad</label>
                <input asp-for="Soyad" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Eposta" class="form-label">Eposta </label>
                <input asp-for="Eposta" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Telefon </label>
                <input asp-for="Telefon" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>

        </form>
    </div>


</div>

<style>
    .col-4 {
        background-color: rgba(255, 255, 255, 0.5); /* Arka plan rengi, son değer saydamlık (0 ile 1 arasında olmalı) */
        border-radius: 20px; /* Oval köşeler için kenar yarıçapı */
        padding: 20px; /* Kutu içeriği ile iç kenar arasındaki boşluk */
    }

</style>
