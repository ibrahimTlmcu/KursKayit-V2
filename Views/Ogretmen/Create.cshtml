@{
}
<div class="orta-div">

    <form asp-controller="Ogretmen" asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Ad" class="form-label">Ogretmen Ad</label>
            <input asp-for="Ad" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Soyad" class="form-label"> Soyad</label>
            <input asp-for="Soyad" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Eposta" class="form-label">Eposta </label>
            <input asp-for="Eposta" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Telefon" class="form-label">Telefon </label>
            <input asp-for="Telefon" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Kaydet</button>

    </form>
</div>

<style>
    .orta-div {
        width: 50%; /* Sayfanın genişliğinin yarısı kadar genişlik */
        margin: 27%; /* Dikey hizalama için margin kullanarak otomatik olarak ortalamak */
        padding: 20px; /* İçerik ile kenar arasında boşluk bırakmak için */
        border: 1px solid #ccc; /* Kenarlık eklemek */
        border-radius: 10px; /* Kenar yuvarlaklığı */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Gölge efekti */
        background-color: #fff; /* Arka plan rengi */
    }
</style>