@using KursKayir.Data

@model IEnumerable<Ogretmen>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="orta-div">

    <h2 style="text-align:center">Ogretmen  Liste</h2>
    <a asp-action="Create" class="btn btn-primary">Ogretmen Ekle</a>
    <table class="table">
        <thead>
            <tr>
                <th style="width:150px;">@Html.DisplayNameFor(m=>m.OgretmenId)</th>
                <th>@Html.DisplayNameFor(m=>m.Ad)</th>
                <th>@Html.DisplayNameFor(m=>m.Soyad)</th>
                <th style="width:150px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><b>@Html.DisplayFor(modelItem => item.OgretmenId)</b></td>
                    <td><b>@Html.DisplayFor(modelItem => item.Ad)</b></td>
                    <td><b>@Html.DisplayFor(modelItem => item.Soyad)</b></td>
                    <td>
                        @*burdan gelen id Ogrenci controller icinden edit kismina gidiyor editte
                    eslesen id varsa bunu kontrol edip return ediyor.*@
                        <a asp-controller="Ogretmen" asp-action="Edit" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-primary">Details</a>
                        <a asp-controller="Ogretmen" asp-action="Delete" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>

<style>
    .orta-div {
        width: 50%; /* Sayfanın genişliğinin yarısı kadar genişlik */
        margin: 27%; /* Dikey hizalama için margin kullanarak otomatik olarak ortalamak */
        padding: 20px; /* İçerik ile kenar arasında boşluk bırakmak için */
        border: 1px solid #ccc; /* Kenarlık eklemek */
        border-radius: 10px; /* Kenar yuvarlaklığı */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.7); /* Gölge efekti */
        background-color: #fff; /* Arka plan rengi */
    }
</style>